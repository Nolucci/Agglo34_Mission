{% extends './base.html.twig' %}

{% block title %}Téléchargement de Fichiers{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #drop-area {
            border: 2px dashed #ccc;
            border-radius: 5px;
            padding: 25px;
            text-align: center;
            cursor: pointer;
            margin-bottom: 20px;
        }

        #drop-area.highlight {
            border-color: green;
        }

        #file-list {
            list-style: none;
            padding: 0;
        }

        #file-list li {
            margin-bottom: 5px;
        }

        #file-info-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        #file-info-table th,
        #file-info-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        #file-info-table th {
            background-color: #f2f2f2;
        }

        .import-type-selection {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #dee2e6;
        }

        .btn-group-toggle .btn {
            padding: 12px 20px;
            font-weight: 500;
            border-radius: 6px !important;
            margin-right: 10px;
            transition: all 0.3s ease;
        }

        .btn-group-toggle .btn:last-child {
            margin-right: 0;
        }

        .btn-group-toggle .btn.active {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        }

        .btn-outline-primary.active {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
        }

        .btn-outline-success.active {
            background-color: #28a745;
            border-color: #28a745;
            color: white;
        }

        .btn-outline-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            color: white;
        }

        .btn-outline-success:hover {
            background-color: #1e7e34;
            border-color: #1e7e34;
            color: white;
        }

        #import-description {
            font-style: italic;
            color: #6c757d;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">

                                <!-- Sélection du type d'import -->
                                <div class="import-type-selection mb-4">
                                    <h4 class="mb-3">Type de données à importer :</h4>
                                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                        <label class="btn btn-outline-primary active" id="equipment-import-btn">
                                            <input type="radio" name="import-type" id="equipment-import" value="equipment" checked>
                                            <i class="fas fa-desktop mr-2"></i>Parc Informatique
                                        </label>
                                        <label class="btn btn-outline-success" id="phone-line-import-btn">
                                            <input type="radio" name="import-type" id="phone-line-import" value="phone-line">
                                            <i class="fas fa-phone mr-2"></i>Lignes Téléphoniques
                                        </label>
                                    </div>
                                    <div class="mt-2">
                                        <small class="text-muted" id="import-description">
                                            Import des équipements informatiques (ordinateurs, imprimantes, etc.)
                                        </small>
                                    </div>
                                </div>

                                <div id="drop-area">
                                    <p>Glissez-déposez vos fichiers ici ou cliquez pour sélectionner</p>
                                    <input type="file" id="file-input" multiple style="display: none;">
                                </div>
                                <ul id="file-list"></ul>
                                <button id="upload-button" class="btn btn-primary mb-3" style="display: none;">Télécharger les fichiers</button>
                                <table id="file-info-table" style="display: none;">
                                    <thead>
                                    <tr>
                                        <th>Nom du fichier</th>
                                        <th>Taille</th>
                                        <th>Type</th>
                                        <th>Dernière modification</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                                <div class="modal fade" id="staticModal" tabindex="-1" role="dialog" aria-labelledby="staticModalLabel" aria-hidden="true"
                                     data-backdrop="static">
                                    <div class="modal-dialog modal-sm" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="staticModalLabel"></h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <p>

                                                </p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                                <button type="button" class="btn btn-primary" data-dismiss="modal">Confirmer</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/file-upload.js') }}"></script>
{% endblock %}