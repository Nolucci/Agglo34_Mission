{# templates/security/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <img src="{{ asset('images/icon/logo.png') }}" alt="Agglo34">
                        </a>
                    </div>
                    <div class="login-form">
                        <form action="{{ path('app_register') }}" method="post">
                            <div class="form-group">
                                <label for="username">Nom d'utilisateur</label>
                                <input class="au-input au-input--full" type="text" id="username" name="username" placeholder="Nom d'utilisateur" required>
                            </div>
                            <div class="form-group">
                                <label for="email">Adresse email</label>
                                <input class="au-input au-input--full" type="email" id="email" name="email" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <label for="password">Mot de passe</label>
                                <input class="au-input au-input--full" type="password" id="password" name="password" placeholder="Mot de passe" required>
                            </div>
                            <div class="login-checkbox">
                                <label>
                                    <input type="checkbox" name="agree" required> J'accepte les conditions d'utilisation
                                </label>
                            </div>
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">S’inscrire</button>
                        </form>
                        <div class="register-link">
                            <p>
                                Vous avez déjà un compte ?
                                <a href="{{ path('app_login') }}">Se connecter</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% endblock %}
