{% extends './base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="page-wrapper">
    <!-- PAGE -->
    <div class="page-container">

        <!-- MAIN -->
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <!-- Overview -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="overview-wrap">
                                <h2 class="title-1">Vue d'ensemble</h2>
                            </div>
                        </div>
                    </div>

                    {# INCLUDE MODALS #}
                    {# INCLUDE MODALS #}
                    {% include './modals/_overview_modal.html.twig' %}

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-header">
                                    <strong class="card-title">Carte de l'Agglomération</strong>
                                </div>
                                <div class="card-body">
                                    <div id="map-agglomeration" style="height: 300px; width: 100%; border: 1px solid #ccc;"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-header">
                                    <strong class="card-title">Statistiques des Lignes</strong>
                                </div>
                                <div class="card-body" style="height: 300px;">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="card text-center">
                                                <div class="card-body">
                                                    <h5 class="card-title"><i class="fa fa-phone fa-2x"></i></h5>
                                                    <p class="card-text">Total des lignes</p>
                                                    <h3 style="font-size: 1.5rem;">{{ lines|length }}</h3>{# Reduced font size #}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="card text-center">
                                                <div class="card-body">
                                                     <h5 class="card-title"><i class="fa fa-building fa-2x"></i></h5>
                                                    <p class="card-text">Services uniques</p>
                                                    <h3 style="font-size: 1.5rem;">{{ phoneLineStats.unique_services }}</h3>{# Reduced font size #}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="card text-center">
                                                <div class="card-body">
                                                    <h5 class="card-title"><i class="fa fa-signal fa-2x"></i></h5>
                                                    <p class="card-text">Opérateurs</p>
                                                    <h3 style="font-size: 1.5rem;">{{ phoneLineStats.unique_operators }}</h3>{# Reduced font size #}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="card text-center">
                                                <div class="card-body">
                                                     <h5 class="card-title"><i class="fa fa-globe fa-2x"></i></h5>
                                                    <p class="card-text">Lignes globales</p>
                                                    <h3 style="font-size: 1.5rem;">{{ phoneLineStats.global_lines }}</h3>{# Reduced font size #}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-header">
                                    <strong class="card-title">Statistiques du Matériel</strong>
                                </div>
                                <div class="card-body" style="height: 300px;">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="card text-center">
                                                <div class="card-body">
                                                    <h5 class="card-title"><i class="fa fa-desktop fa-2x"></i></h5>
                                                    <p class="card-text">Total du matériel</p>
                                                    <h3 style="font-size: 1.5rem;">{{ parkStats.total_equipments }}</h3>{# Reduced font size #}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="card text-center">
                                                <div class="card-body">
                                                    <h5 class="card-title"><i class="fa fa-building fa-2x"></i></h5>
                                                    <p class="card-text">Services uniques</p>
                                                    <h3 style="font-size: 1.5rem;">{{ parkStats.unique_services }}</h3>{# Reduced font size #}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="card text-center">
                                                <div class="card-body">
                                                    <h5 class="card-title"><i class="fa fa-map-marker fa-2x"></i></h5>
                                                    <p class="card-text">Communes</p>
                                                    <h3 style="font-size: 1.5rem;">{{ parkStats.unique_municipalities }}</h3>{# Reduced font size #}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="card text-center">
                                                <div class="card-body">
                                                    <h5 class="card-title"><i class="fa fa-check-circle fa-2x"></i></h5>
                                                    <p class="card-text">Matériel actif</p>
                                                    <h3 style="font-size: 1.5rem;">{{ parkStats.active_equipments }}</h3>{# Reduced font size #}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                 </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/map.js') }}"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            initMap(); // Assuming initMap is defined in map.js
        });
    </script>
{% endblock %}

