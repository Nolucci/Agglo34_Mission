<header class="header-desktop">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="header-wrap">
                <h2 class="page-title">{{ page_title }}</h2>
                <div class="account-wrap">
                    <div class="account-item clearfix js-item-menu">
                        <div class="image">
                            <img src="{{ user.image_url|default('path/to/default.jpg') }}" alt="{{ user.name|default('User') }}" />
                        </div>
                        <div class="content">
                            <a class="js-acc-btn" href="#">{{ user.name|default('John Doe')|lower }}</a>
                        </div>
                        <div class="account-dropdown js-dropdown">
                            <div class="info clearfix">
                                <div class="image">
                                    <a href="#">
                                        <img src="{{ user.image_url|default('path/to/default.jpg') }}" alt="{{ user.name|default('User') }}" />
                                    </a>
                                </div>
                                <div class="content">
                                    <h5 class="name">
                                        <a href="#">{{ user.name|default('John')|lower }}</a>
                                    </h5>
                                    <span class="email">{{ user.email|default('john@example.com') }}</span>
                                </div>
                            </div>
                            <div class="account-dropdown__body">
                                <div class="account-dropdown__item">
                                    <a href="{{ path('account') }}">
                                        <i class="zmdi zmdi-account"></i>Account</a>
                                </div>
                                <div class="account-dropdown__item">
                                    <a href="{{ path('settings') }}">
                                        <i class="zmdi zmdi-settings"></i>Setting</a>
                                </div>
                            </div>
                            <div class="account-dropdown__footer">
                                <a href="{{ path('logout') }}">
                                    <i class="zmdi zmdi-power"></i>Logout</a>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
