<!-- Modal Filtres Archives -->
<div class="modal fade" id="archivesFiltersModal" tabindex="-1" role="dialog" aria-labelledby="archivesFiltersModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="archivesFiltersModalLabel">
                    <i class="fa fa-filter"></i> Filtres des Archives
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="archives-filter-form" method="get" action="{{ path('app_archive') }}">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="entityType">Type d'entité</label>
                                <select class="form-control" id="entityType" name="entityType">
                                    <option value="">Tous les types</option>
                                    {% for type in entityTypes %}
                                        <option value="{{ type }}" {% if filters.entityType == type %}selected{% endif %}>{{ type }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="startDate">Date de début</label>
                                <input type="date" id="startDate" name="startDate" class="form-control" value="{{ filters.startDate }}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="endDate">Date de fin</label>
                                <input type="date" id="endDate" name="endDate" class="form-control" value="{{ filters.endDate }}">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="apply-archives-filters">
                    <i class="fa fa-filter"></i> Appliquer les Filtres
                </button>
                <button type="button" class="btn btn-warning" id="reset-archives-filters">
                    <i class="fa fa-refresh"></i> Réinitialiser
                </button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const applyFiltersBtn = document.getElementById('apply-archives-filters');
    const resetFiltersBtn = document.getElementById('reset-archives-filters');
    const filtersForm = document.getElementById('archives-filter-form');

    if (applyFiltersBtn) {
        applyFiltersBtn.addEventListener('click', function() {
            filtersForm.submit();
        });
    }

    if (resetFiltersBtn) {
        resetFiltersBtn.addEventListener('click', function() {
            window.location.href = "{{ path('app_archive') }}";
        });
    }
});
</script>