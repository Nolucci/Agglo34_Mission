<div class="modal fade" id="boxModal" tabindex="-1" role="dialog" aria-labelledby="boxModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="boxModalLabel">Ajouter une Box</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="box-form">
                    <input type="hidden" id="box-id" name="id">
                    <div class="form-group">
                        <label for="box-commune">Commune:</label>
                        <select class="form-control" id="box-commune" name="commune" required>
                            <option value="">-- Sélectionner une commune --</option>
                            {% for municipality in municipalities %}
                                <option value="{{ municipality.id }}">{{ municipality.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="box-localisation">Localisation:</label>
                        <input type="text" class="form-control" id="box-localisation" name="localisation" required>
                    </div>
                    <div class="form-group">
                        <label for="box-adresse">Adresse:</label>
                        <input type="text" class="form-control" id="box-adresse" name="adresse" required>
                    </div>
                     <div class="form-group">
                        <label for="box-ligne_support">Ligne de Support:</label>
                        <input type="text" class="form-control" id="box-ligne_support" name="ligne_support">
                    </div>
                    <div class="form-group">
                        <label for="box-type">Type:</label>
                        <input type="text" class="form-control" id="box-type" name="type">
                    </div>
                     <div class="form-group">
                        <label for="box-name">Nom:</label>
                        <input type="text" class="form-control" id="box-name" name="name">
                    </div>
                    <div class="form-group">
                        <label for="box-description">Description:</label>
                        <textarea class="form-control" id="box-description" name="description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="box-brand">Marque:</label>
                        <input type="text" class="form-control" id="box-brand" name="brand">
                    </div>
                    <div class="form-group">
                        <label for="box-model">Modèle:</label>
                        <input type="text" class="form-control" id="box-model" name="model">
                    </div>
                    <div class="form-group">
                        <label for="box-assignedTo">Attribué à:</label>
                        <input type="text" class="form-control" id="box-assignedTo" name="assignedTo">
                    </div>
                     <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="box-isActive" name="isActive">
                        <label class="form-check-label" for="box-isActive">Active</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="save-box-btn">Enregistrer</button>
            </div>
        </div>
    </div>
</div>