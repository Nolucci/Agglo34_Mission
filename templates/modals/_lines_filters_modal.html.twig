<!-- Modal Filtres Lignes -->
<div class="modal fade" id="lignesFiltersModal" tabindex="-1" role="dialog" aria-labelledby="lignesFiltersModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lignesFiltersModalLabel">
                    <i class="fa fa-filter"></i> Filtres des Lignes Téléphoniques
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="lignesFiltersForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="operatorFilter">Opérateur</label>
                                <select class="form-control" id="operatorFilter" name="operator">
                                    <option value="">Tous les opérateurs</option>
                                    {% set operators = [] %}
                                    {% for line in phoneLines %}
                                        {% if not (line.operator in operators) %}
                                            {% set operators = operators|merge([line.operator]) %}
                                        {% endif %}
                                    {% endfor %}
                                    {% for operator in operators %}
                                        <option value="{{ operator }}">{{ operator }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="lineTypeFilter">Type de Ligne</label>
                                <select class="form-control" id="lineTypeFilter" name="lineType">
                                    <option value="">Tous les types</option>
                                    {% set lineTypes = [] %}
                                    {% for line in phoneLines %}
                                        {% if not (line.lineType in lineTypes) %}
                                            {% set lineTypes = lineTypes|merge([line.lineType]) %}
                                        {% endif %}
                                    {% endfor %}
                                    {% for type in lineTypes %}
                                        <option value="{{ type }}">{{ type }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="serviceFilter">Service</label>
                                <select class="form-control" id="serviceFilter" name="service">
                                    <option value="">Tous les services</option>
                                    {% set services = [] %}
                                    {% for line in phoneLines %}
                                        {% if not (line.service in services) %}
                                            {% set services = services|merge([line.service]) %}
                                        {% endif %}
                                    {% endfor %}
                                    {% for service in services %}
                                        <option value="{{ service }}">{{ service }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="municipalityFilter">Municipalité</label>
                                <select class="form-control" id="municipalityFilter" name="municipality">
                                    <option value="">Toutes les municipalités</option>
                                    {% set municipalities = [] %}
                                    {% for line in phoneLines %}
                                        {% if not (line.municipality in municipalities) %}
                                            {% set municipalities = municipalities|merge([line.municipality]) %}
                                        {% endif %}
                                    {% endfor %}
                                    {% for municipality in municipalities %}
                                        <option value="{{ municipality }}">{{ municipality }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="statusFilter">Statut</label>
                                <select class="form-control" id="statusFilter" name="isGlobal">
                                    <option value="">Tous les statuts</option>
                                    <option value="1">Global</option>
                                    <option value="0">Local</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="applyFiltersBtn">
                    <i class="fa fa-filter"></i> Appliquer les Filtres
                </button>
                <button type="button" class="btn btn-warning" id="resetFiltersBtn">
                    <i class="fa fa-refresh"></i> Réinitialiser
                </button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const applyFiltersBtn = document.getElementById('applyFiltersBtn');
    const resetFiltersBtn = document.getElementById('resetFiltersBtn');
    const filtersForm = document.getElementById('lignesFiltersForm');
    const lignesFiltersModal = document.getElementById('lignesFiltersModal');

    applyFiltersBtn.addEventListener('click', function() {
        const formData = new FormData(filtersForm);
        const filters = {};

        for (let [key, value] of formData.entries()) {
            if (value) {
                filters[key] = value;
            }
        }

        // Filter the lines based on the selected filters
        displayedPhoneLines = allPhoneLines.filter(line => {
            let passesFilter = true;
            for (const key in filters) {
                if (key === 'isGlobal') {
                    // Convert the filter value to boolean for comparison
                    const filterValue = filters[key] === '1';
                    if (line[key] !== filterValue) {
                        passesFilter = false;
                        break;
                    }
                } else if (line[key] != filters[key]) {
                    passesFilter = false;
                    break;
                }
            }
            return passesFilter;
        });

        // Render the filtered lines
        renderLinesTable(displayedPhoneLines);

        // Close the modal
        $(lignesFiltersModal).modal('hide');
    });

    resetFiltersBtn.addEventListener('click', function() {
        filtersForm.reset();
        // Reset displayed lines to all lines
        displayedPhoneLines = [...allPhoneLines];
        renderLinesTable(displayedPhoneLines);
        // Close the modal
        $(lignesFiltersModal).modal('hide');
    });
});
</script>
