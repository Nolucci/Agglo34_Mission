<!-- DATA TABLE -->
<div class="wrap">
    <div class="table-data__tool">
        <div class="table-data__tool-left">
            <div class="rs-select2--light rs-select2--md">
                <label for="townFilter">Options</label><select class="js-select2" id="townFilter">
                    <option value="">Toutes les communes</option>
                    {% for town in towns %}
                        <option value="{{ town.name }}">{{ town.name }}</option>
                    {% endfor %}
                </select>
                <div class="dropDownSelect2"></div>
            </div>
            <button class="au-btn-filter">
                <i class="zmdi zmdi-filter-list"></i>Filtres
            </button>
        </div>
        <div class="table-data__tool-right">
            <button class="au-btn au-btn-icon au-btn--green au-btn--small">
                <i class="zmdi zmdi-plus"></i>Ajouter
            </button>
        </div>
    </div>
        <div class="table-responsive table-responsive-data2">
            <table id="telephoneTable" class="table table-data2 display nowrap">
                <thead>
                <tr>
                    <th>
                        <label class="au-checkbox">
                            <input type="checkbox">
                            <span class="au-checkmark"></span>
                        </label>
                    </th>
                    <th>Commune</th>
                    <th>Numéro</th>
                    <th>Opérateur</th>
                    <th>Débit (Mbps)</th>
                    <th>Date d'installation</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for town in towns %}
                    {% for line in town.telephoneLines %}
                        <tr class="tr-shadow clickable-row">
                            <!-- data-href="{path('telephone_line_show', {'id': line.id}) }"-->
                            <td>
                                <label class="au-checkbox">
                                    <input type="checkbox">
                                    <span class="au-checkmark"></span>
                                </label>
                            </td>
                            <td>{{ town.name }}</td>
                            <td>{{ line.numero }}</td>
                            <td>{{ line.operator }}</td>
                            <td>{{ line.speed ?: 'N/A' }}</td>
                            <td>{{ line.installationDate ? line.installationDate|date('Y-m-d H:i') : 'N/A' }}</td>
                            <td>
                                <div class="table-data-feature">
                                    <button class="item edit-btn" title="Modifier" data-id="{{ line.id }}">
                                        <i class="zmdi zmdi-edit"></i>
                                    </button>
                                    <button class="item delete-btn" title="Supprimer" data-id="{{ line.id }}">
                                        <i class="zmdi zmdi-delete"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr class="spacer"></tr>
                    {% endfor %}
                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- END DATA TABLE -->
    </div>
</div>