<div class="modal fade" id="parkModal" tabindex="-1" role="dialog" aria-labelledby="parkModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="parkModalLabel">Ajouter un Équipement Informatique</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="equipment-form">
                    <input type="hidden" id="equipment-id" name="id">
                    <div class="form-group">
                        <label for="equipment-commune">Commune:</label>
                        <select class="form-control" id="equipment-commune" name="commune" required>
                            <option value="">Sélectionner une commune</option>
                            {% for municipality in municipalities %}
                                <option value="{{ municipality.id }}">{{ municipality.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="equipment-localisation">Lieu:</label>
                        <input type="text" class="form-control" id="equipment-localisation" name="localisation">
                    </div>
                    <div class="form-group">
                        <label for="equipment-etiquetage">Étiquetage:</label>
                        <input type="text" class="form-control" id="equipment-etiquetage" name="etiquetage">
                    </div>
                    <div class="form-group">
                        <label for="equipment-modele">Modèle:</label>
                        <input type="text" class="form-control" id="equipment-modele" name="modele" required>
                    </div>
                    <div class="form-group">
                        <label for="equipment-numeroSerie">Numéro de série:</label>
                        <input type="text" class="form-control" id="equipment-numeroSerie" name="numeroSerie">
                    </div>
                    <div class="form-group">
                        <label for="equipment-service">Service:</label>
                        <input type="text" class="form-control" id="equipment-service" name="service" required>
                    </div>
                    <div class="form-group">
                        <label for="equipment-utilisateur">Utilisateur:</label>
                        <input type="text" class="form-control" id="equipment-utilisateur" name="utilisateur">
                    </div>
                    <div class="form-group">
                        <label for="equipment-dateGarantie">Date de garantie:</label>
                        <input type="date" class="form-control" id="equipment-dateGarantie" name="dateGarantie">
                    </div>
                    <div class="form-group">
                        <label for="equipment-os">Système d'exploitation:</label>
                        <input type="text" class="form-control" id="equipment-os" name="os">
                    </div>
                    <div class="form-group">
                        <label for="equipment-version">Version:</label>
                        <input type="text" class="form-control" id="equipment-version" name="version">
                    </div>
                    <div class="form-group">
                        <label for="equipment-statut">Statut:</label>
                        <select class="form-control" id="equipment-statut" name="statut">
                            <option value="Actif">Actif</option>
                            <option value="Inactif">Inactif</option>
                            <option value="Panne">Panne</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="save-equipment">Enregistrer</button>
            </div>
        </div>
    </div>
</div>