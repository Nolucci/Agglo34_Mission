<div class="modal fade" id="parkModal" tabindex="-1" role="dialog" aria-labelledby="parkModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="parkModalLabel">Ajouter un Équipement Informatique</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="equipment-type">Type:</label>
                        <input type="text" class="form-control" id="equipment-type" name="type" required>
                    </div>
                    <div class="form-group">
                        <label for="equipment-brand">Marque:</label>
                        <input type="text" class="form-control" id="equipment-brand" name="brand">
                    </div>
                    <div class="form-group">
                        <label for="equipment-model">Modèle:</label>
                        <input type="text" class="form-control" id="equipment-model" name="model">
                    </div>
                     <div class="form-group">
                        <label for="equipment-assignedTo">Attribué à:</label>
                        <input type="text" class="form-control" id="equipment-assignedTo" name="assignedTo">
                    </div>
                    <div class="form-group">
                        <label for="equipment-location">Localisation:</label>
                        <input type="text" class="form-control" id="equipment-location" name="location">
                    </div>
                    <div class="form-group">
                        <label for="equipment-municipality">Commune:</label>
                        {# Placeholder for Municipality relationship - replace with actual select/dropdown #}
                        <input type="text" class="form-control" id="equipment-municipality" name="municipality" placeholder="Choisir une Commune">
                    </div>
                     <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="equipment-isActive" name="isActive">
                        <label class="form-check-label" for="equipment-isActive">Actif</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary">Enregistrer</button>
            </div>
        </div>
    </div>
</div>